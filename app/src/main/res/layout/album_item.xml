<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_album_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anw"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Another Day"
        android:textColor="@color/dark"
        app:layout_constraintStart_toEndOf="@+id/iv_album_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_album_cover" />

    <TextView
        android:id="@+id/tv_ablum_artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="Kestutis K"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_album_song_count"
        app:layout_constraintEnd_toStartOf="@+id/iv_album_menu"
        app:layout_constraintStart_toEndOf="@+id/tv_album_song_count" />

    <TextView
        android:id="@+id/tv_album_song_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="1 songs"
        app:layout_constraintBottom_toBottomOf="@+id/iv_album_cover"
        app:layout_constraintStart_toEndOf="@+id/iv_album_cover" />

    <ImageView
        android:id="@+id/iv_album_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pop_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>