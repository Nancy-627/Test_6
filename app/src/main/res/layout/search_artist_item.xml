<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/iv_artist_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_avatar" />

    <TextView
        android:id="@+id/tv_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Alan Walker"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_artist_pic"
        app:layout_constraintTop_toTopOf="@+id/iv_artist_pic"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_artist_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="(艾兰·沃克)"
        android:textColor="@color/gray"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_artist_name"
        app:layout_constraintStart_toEndOf="@+id/tv_artist_name"
        android:layout_marginLeft="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>