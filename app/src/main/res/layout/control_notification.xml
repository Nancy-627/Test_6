<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_song_ablum"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ahs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_controller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fade"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/tv_controller_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alan Walker - Fade"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:background="@color/divider_color"
            android:layout_width="match_parent"
            android:layout_height="0.1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_control_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/note_btn_loved"
                app:tint="@color/red" />

            <ImageView
                android:id="@+id/iv_control_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/note_btn_pre"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/iv_control_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/note_btn_pause_white"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/iv_control_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/note_btn_next"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/iv_control_lyric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/note_btn_lyc_white" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>